    <script type="text/javascript">
			jQuery(document).ready(function(){
 
    			$('#input_senha').pstrength();
    		 });
    		function do_form() {
 	 			
 	 			$.ajax({
 	 				type:'post',
  						url: 'serverside/loginapr.php',
  				   data: $('contact_form').serialize()
  					,
  					success:function(response) {
  						
  						if(response=="success"){
  						
  	  						$("#success_message").fadeIn(1500);
  	  						$("#success_message").fadeOut(500)
  	  					$("#contact_form").preventDefault();
  	  						 					
  	  					}
  						
  					}
  				});
 	 			
 	 			
 	 			
 	 			return false;
 	 		}
 	
	</script>
	  <script src="js/index.js"></script>
